\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemeuha}[2018/10/22 uha color theme]

\makeatletter

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% colors definition
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\definecolor{uha@bggray}{RGB}{245,245,245}
\definecolor{uha@blue1}{RGB}{0,63,128}
\definecolor{uha@blue2}{RGB}{20,40,92}
\definecolor{uha@orange1}{RGB}{204,86,20}
\definecolor{uha@green}{RGB}{0,140,57}
\definecolor{uha@red}{RGB}{194,24,12}

\mode<presentation>

\setbeamercolor{palette primary}{fg=uha@blue1, bg=uha@bggray}
\setbeamercolor{palette secondary}{fg=uha@bggray, bg=uha@blue1}
\setbeamercolor{palette tertiary}{fg=uha@bggray, bg=uha@blue1}


\setbeamercolor{background canvas}{bg=}
\setbeamercolor{normal text}{fg=uha@blue2}
\setbeamercolor{alerted text}{fg=uha@orange1}
\setbeamercolor{section in toc}{fg=uha@blue1}
\setbeamercolor{subsection in toc}{fg=uha@blue1}


\setbeamercolor{titlepage}{fg=uha@blue1, bg=}
\setbeamercolor{titlepage negative}{fg=uha@bggray, bg=}
\setbeamercolor{sectionpage}{fg=uha@bggray, bg=uha@blue2}

\setbeamercolor{headline}{bg=, fg=uha@orange1}
\setbeamercolor{head/foot}{bg=, fg=uha@blue1}
\setbeamercolor{head/foot negative}{fg=uha@bggray, bg=uha@blue1}

\setbeamercolor*{item}{fg=uha@blue1}

\setbeamercolor{block title example}{fg=uha@green}
\setbeamercolor{block title alerted}{fg=uha@red}
\setbeamercolor{block title}{fg=uha@blue1}

\setbeamercolor{block body example}{fg=uha@green,bg=uha@bggray}
\setbeamercolor{block body alerted}{fg=uha@red,bg=uha@bggray}
\setbeamercolor{block body}{fg=uha@blue1,bg=uha@bggray}


\providebool{negative}

\define@key{beamerframe}{negative}[true]{
  \booltrue{negative}
  \begingroup
  \setbeamertemplate{title page}[uha/negative]
  \setbeamertemplate{frametitle}[uha/negative]
  \setbeamertemplate{footline}[uha/negative]
  \usebeamercolor[bg]{background canvas}
  \setbeamercolor{background canvas}{bg=uha@blue1}
}

\apptocmd{\beamer@reseteecodes}{%
  \ifbool{negative}{%
    \endgroup
    \boolfalse{negative}
  }{}
}{}{}

\mode<all>

\makeatother
